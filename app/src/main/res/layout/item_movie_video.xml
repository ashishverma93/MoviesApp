<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lay_movie_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:selectableItemBackground"
        android:paddingBottom="@dimen/margin_8">

        <ImageView
            android:id="@+id/imv_movie_video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/txt_cast_member_image"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/colorPrimary_one" />

        <ImageView
            android:id="@+id/imv_thumb_play"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imv_movie_video"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/imv_movie_video"
            app:layout_constraintStart_toStartOf="@+id/imv_movie_video"
            app:layout_constraintTop_toTopOf="@+id/imv_movie_video"
            app:srcCompat="@drawable/ic_video_thumbnail" />

        <TextView
            android:id="@+id/txv_movie_video_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey_800"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imv_movie_video"
            tools:text="Trailor" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>